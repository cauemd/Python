from datetime import date
year = int(input('Type any year (type \'0\' to check current year): '))
if year == 0:
    year = date.today().year
if year % 4 == 0 and year % 100 != 0 or year % 400 == 0:
    print('The year {} is a leap year.'.format(year))
else:
    print('The year {} is a common, boring 365 days year.'.format(year))
